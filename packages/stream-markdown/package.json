{
  "name": "stream-markdown",
  "type": "module",
  "version": "0.0.7",
  "description": "Streaming code/markdown highlighter utilities (Shiki-based)",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "peerDependencies": {
    "shiki": ">=3.13.0"
  },
  "devDependencies": {
    "bumpp": "^9.11.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  }
}
